
<!-- All kind of input from template -->
{% macro input_field( name , label , type , placeholder , indications , value ) %}
  <div class="form-group">
   {% if label != false %} <label>{{ label }}</label>{% endif %}
    <input type="{{ type }}" class="form-control" name="{{ name }}" {% if placeholder != false %} placeholder="{{ placeholder }}" {% endif %} {% if value != false %} value="{{ value }}" {% endif %} id="{{ name }}" required>
    {% if indications != false %}
      <div class="invalid-feedback">{{ indications }}</div>
    {% endif %}
  </div>
{% endmacro %}

<!-- All kind of submit from template -->
{% macro submit( label , name , color ) %}
  <div class="form-group">
      <button name = "{{ name }}" style="padding-right: 10px;" class="btn btn-block {{ color }}" type="submit">{{ label }}</button>
  </div>
{% endmacro %}

<!-- All kind of bootstrap button from template -->
{% macro button( href , label , class , id ) %}
  <button type = "submit" id = "{{ id }}" style="padding-right: 10px;" class = "btn {{ class }}">
    <a href="{{ href }}">{{ label }}</a>
  </button>
{% endmacro %}

<!-- All select from template -->
{% macro select(name , label , value , content ) %}
  <div class="form-group">
      <label>{{ label }}</label>
      <select class="custom-select selecteur" name="{{ name }}" required>
        <option value="{{ value }}">{{ content }}</option>
      </select>
  </div>
{% endmacro %}

<!-- All textarea input from template -->
{% macro textarea_field(name , label , indications ) %}
  <div class="form-group">
    <label>{{ label }}</label>
    <textarea class="form-control textarea" rows="3" name="{{ name }}" id="inputlarge" required></textarea>
    <div class="invalid-feedback">{{ indications }}</div>
  </div>
{% endmacro %}

<!-- All input for import fiels from template -->
{% macro import_field(name , id , format , label) %}
  <label>{{ label }}</label>
  <input type="file" name="{{ name }}" id="{{ id }}" accept="{{ format }} ">
  <hr>
{% endmacro %}

<!-- All input with search icon from template -->
{% macro input_search(name_searchbar , name_submit , placeholder , class) %}
  <div class="p-1 bg-light rounded rounded-pill shadow-sm mb-4 {{ class }}">
    <div class="input-group" id="searchbar">
        <input type="search" name="{{ name_searchbar }}" placeholder="{{ placeholder }}" class="form-control border-0 bg-light" id="recherchedata" onkeyup="Rechinfodatas()">
        <div class="input-group-append">
            <button id="button-addon1" name="{{ name_submit }}" type="submit" class="btn btn-link text-dark"><i class="fa fa-search"></i></button>
        </div>
    </div>
  </div>
{% endmacro %}

<!-- All href button from template -->
{% macro buttom_href(href , label , class , id) %}
  <button type="submit" id="{{ id }}" class="btn {{ class }}">
    <a href="{{ href }}">{{ label }}</a>
  </button>
{% endmacro %}